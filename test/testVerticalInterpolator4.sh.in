#! /bin/sh
TEST="conversion of ensemble sigma-hybrid to pressure"
echo "testing $TEST"
OUT_NC="out$$.nc"
../src/binSrc/fimex \
    --input.file=@top_srcdir@/test/testdata_vertical_ensemble_in.nc \
    --verticalInterpolate.type=pressure \
    --verticalInterpolate.method=log \
    --verticalInterpolate.level1=1000,850,500,300,100,50 \
    --output.file="$OUT_NC"
if [ $? != 0 ]; then
  echo "failed $TEST"
  rm -f "$OUT_NC"
  exit 1
fi

EXP_NC="@top_srcdir@/test/testdata_vertical_ensemble_ex.nc"
if "@srcdir@/nccmp.sh" "$EXP_NC" "$OUT_NC" ; then
  echo "success"
  E=0
else
  echo "failed diff for $TEST"
  E=1
fi
rm -f "$OUT_NC"
exit $E
