<!-- rename a variable -->
<variable name="pressure" newname="air_pressure" />

<!-- rename a dimension -->
<dimension name="x" newname="Xc" />

<!-- rename a attribute -->
<attribute name="min_time" newname="start_time" />
</cdm_ncwriter_config>  